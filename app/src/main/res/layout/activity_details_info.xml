<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorWhite"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context=".details_info">
    <LinearLayout
        android:id="@+id/details"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@color/colorWhite"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/info_type"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="Primary Info"
            android:gravity="center"
            android:textColor="@color/colorBlack"
            android:textSize="40sp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dpsz1"
            >
            <TextView
                android:id="@+id/student_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Student ID: "
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/spsz2"
                />
            <TextView
                android:id="@+id/student_id_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="181-15-11009"
                android:textColor="@color/colorGrey"
                android:textSize="@dimen/spsz2"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dpsz1"
            >
            <TextView
                android:id="@+id/student_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name: "
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/spsz2"
                />
            <TextView
                android:id="@+id/student_name_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mehedi Hasan"
                android:textColor="@color/colorGrey"
                android:textSize="@dimen/spsz2"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dpsz1"
            >
            <TextView
                android:id="@+id/father_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Father's name: "
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/spsz2"
                />
            <TextView
                android:id="@+id/father_name_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mamaun Akhter"
                android:textColor="@color/colorGrey"
                android:textSize="@dimen/spsz2"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dpsz1"
            >
            <TextView
                android:id="@+id/mother_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mother's name: "
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/spsz2"
                />
            <TextView
                android:id="@+id/mother_name_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Safiatun Nessa"
                android:textColor="@color/colorGrey"
                android:textSize="@dimen/spsz2"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dpsz1"
            >
            <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address: "
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/spsz2"
                />
            <TextView
                android:id="@+id/address_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="108, Rasulpur, Dania, Dhaka."
                android:textColor="@color/colorGrey"
                android:textSize="@dimen/spsz2"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dpsz1"
            >
            <TextView
                android:id="@+id/cgpa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CGPA: "
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/spsz2"
                />
            <TextView
                android:id="@+id/cgpa_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="4.00"
                android:textColor="@color/colorGrey"
                android:textSize="@dimen/spsz2"
                />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>